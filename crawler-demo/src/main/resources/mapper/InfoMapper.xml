<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hgcode.crawler.repository.InfoMapper">

    <resultMap id="resutMap" type="com.hgcode.crawler.entity.InfoEntity">
        <id column="id" property="id" javaType="java.lang.Long"/>
        <result column="create_time" property="createTime"/>
        <result column="title" property="title"/>
        <result column="source" property="source"/>
        <result column="scrapy_source" property="scrapySource"/>
        <result column="url" property="url"/>
        <result column="image_url" property="imageUrl"/>
    </resultMap>

    <sql id="baseSql">
        id,create_time,title,source,scrapy_source,url,image_url
    </sql>


    <select id="findByTitle" parameterType="string" resultMap="resutMap">
      SELECT <include refid="baseSql"/> FROM info where title=#{title}
    </select>

    <insert id="insert" parameterType="InfoEntity" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        insert into info(create_time,title,source,scrapy_source,url,image_url)
        value (#{createTime},#{title},#{source},#{scrapySource},#{url},#{imageUrl})
    </insert>

    <select id="find" resultMap="resutMap">
        select <include refid="baseSql"/> from info order by create_time desc;
    </select>

</mapper>